    script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBMzKheFPLiBa2PKedLsX3J-5QGfPi-5bU&callback=initMap&v=weekly" defer).
    script.
        let map;
        function initMap() {
            const myLatLng = {lat: -25.4710897, lng: 30.9752711}
            map = new google.maps.Map(document.getElementById("map"), {
                center: myLatLng,
                zoom: 15,
            });

            new google.maps.Marker({
                position: myLatLng,
                map,
                title: "Mandleleni Funeral & Catering Services"
            });

        }

        window.initMap = initMap;
        function openMenu() {
            const x = document.getElementById("myLinks");
